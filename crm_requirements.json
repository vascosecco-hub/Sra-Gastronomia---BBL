{
    "project_name": "CRM de Análise de Performance de Vendas",
    "description": "Sistema para monitorar vendas e avaliar hábitos de clientes e localizações de entrega.",
    "tech_stack": {
        "frontend": "React / Vite / TailwindCSS",
        "backend": "Supabase",
        "libraries": [
            "recharts",
            "lucide-react",
            "date-fns"
        ]
    },
    "requirements": {
        "dashboard": {
            "main_table": {
                "columns": [
                    "Data e Hora",
                    "Nome do Cliente",
                    "WhatsApp",
                    "Categorias",
                    "Produtos",
                    "Preço",
                    "Endereço de Entrega"
                ],
                "filters": [
                    "Cliente",
                    "Categoria",
                    "Produto",
                    "Valor",
                    "Endereço",
                    "Intervalo de Data/Hora"
                ]
            },
            "charts": {
                "types": [
                    "Bar/Column Chart",
                    "Pie Chart"
                ],
                "dimensions": [
                    "Número de Clientes",
                    "Categorias",
                    "Produtos",
                    "Faturamento",
                    "Endereços"
                ],
                "features": [
                    "Global Date/Time Filter"
                ]
            },
            "heatmap": {
                "description": "Mapa de calor de interações/vendas",
                "axes": {
                    "x": "Dias do Mês",
                    "y": "Horários"
                },
                "color_scale": {
                    "hot": "Vermelho (Maior Movimento)",
                    "cold": "Amarelo (Menor Movimento)"
                }
            }
        },
        "database": {
            "provider": "Supabase",
            "seeding": "Required for testing and visualization"
        }
    }
}